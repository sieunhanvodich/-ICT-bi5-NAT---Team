<div>
	<% if order.completed? %>
		<div class="complete">
		 	<% link_to "Mark as Complete", complete_table_order_path(@table, order.id), method: :patch %>
		</div>
        <div class="order">
			<p style="opacity: 0.4;"><strike><%= order.content %></strike></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", table_order_path(@table, order.id), method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
		<% else %>
		<div class="complete">
		 	<% link_to "Mark as Complete", complete_table_order_path(@table, order.id), method: :patch %>
		</div>
        <div class="order">
			<p><%= order.content %></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", table_order_path(@table, order.id), method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
		<% end %>
</div>