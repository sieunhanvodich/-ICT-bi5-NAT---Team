
<div class="categorycontainer">
<div id="categorycontainer1">
<iframe src="/tables" width="100%" height="350px" style="border: none; border-radius: 10px;"></iframe> 
</div>
<div id="categorycontainer2">


 <ul class="nav nav-tabs">
 	<% @categories.each do |category| %>
  	<li role="presentation" style="margin:2px; border-radius: 10px; background-color: #CAE5E8; text-transform: uppercase;"> <a data-toggle="tab" href="#<%= category.id %>"> <%= category.content %> </a> </li>
	<% end %>
  <% if current_user && current_user.admin? %>
	<li style="margin:2px; border-radius: 10px; background-color: #CAE5E8; font-size: 10px" role="presentation" > <a data-toggle="tab" href="#add"> 
  
  <span class="glyphicon glyphicon-plus" style="font-size: 17px">  </a></li>
  <% end %>
</ul>

<div class="tab-content">
	<% @categories.each do |category| %>
    <div id="<%= category.id %>" class="tab-pane" >	
      <iframe height="300px" width="100%" scrolling="auto" style="border: none; border-radius: 10px;" src="categories/<%= category.id %>"></iframe>
    </div>
    <% end %>
    <div id="add" class="tab-pane">	
      <iframe height="300px" width="100%" scrolling="auto" style="border: none; border-radius: 10px;" src="categories/new" id="addcate"></iframe>
    </div>
  </div>




</div>

</div>