<!DOCTYPE html>
<html>
<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script src="jquery.js"></script> 
    

</head>
<body>


 <% Category.includes(:items).order('categories.id').each do |category| %>
    <p style="text-align: left; text-transform: uppercase; font-size: 20px; color: black"> <%= category.content %>  </p>
    <% category.items.each do |item| %>
    <script>

	$(document).ready(function(){
	    /*$("#btn1").click(function(){
	        $("p").append( <b>Appended text</b>.);
	    });*/
	    
	    $("#btn<%= item.id %>").click(function(){
	        window.top.change("<%= item.content %>  <%= item.price %>\n");
	    });
	});

</script>

      <button id="btn<%= item.id %>" style="width:150px; display: inline-block; margin-right: 14px; margin-bottom: 10px;"><%= item.content %> </button>
<% end %>
<% end %>

</body>
</html>

